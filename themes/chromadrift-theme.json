{
	"name": "Chroma Drift",
	"colors": {

		"tab.activeModifiedBorder": "#00000000",
		"tab.unfocusedActiveModifiedBorder": "#00000000",
		"tab.inactiveModifiedBorder": "#00000000",
		
		"tab.activeForeground": "#FFFFFF", 
		"editorLineNumber.activeForeground": "#FFFFFF",
		"editorLineNumber.foreground": "#555",


		"tab.inactiveForeground": "#777777",
		"tab.unfocusedActiveForeground": "#CCCCCC",
		"tab.unfocusedInactiveForeground": "#888888",


		"editor.background": "#222222",
		"sideBar.background": "#222222",
		"tab.activeBackground": "#222222",
		"tab.inactiveBackground": "#222222",
		"titleBar.activeBackground": "#222222",
		"statusBar.background": "#222222",
		"editorGroupHeader.tabsBackground": "#222222",

		"editor.lineHighlightBackground": "#333333",

		"editorIndentGuide.activeBackground1": "#444444",

		"editorIndentGuide.background1": "#282828",

		"scrollbarSlider.background": "#5b92",
		"scrollbarSlider.hoverBackground": "#5b94",
		"scrollbarSlider.activeBackground": "#5b9",
		"editorOverviewRuler.border": "#FFFFFF00",


		"widget.shadow": "#FFFFFF00",
		"scrollbar.shadow": "#FFFFFF00",

		"window.activeBorder": "#5b9",

		"breadcrumb.foreground": "#494958"
	},
	"tokenColors": [
		// variables and parameters: off-white
		{
			"scope": [ "variable", "variable.parameter", "variable.other" ],
			"settings": { "foreground": "#eeeeee" }
		},

		// numbers: light blue
		{
			"scope": [ "constant.numeric" ],
			"settings": { "foreground": "#adf0ff" }
		},

		// keywords: light green
		{
			"scope": [ "keyword", "storage.type", "storage.modifier" ],
			"settings": { "foreground": "#95e7ba", "fontStyle": "bold" }
		},

		// null/undefined: gray
		{
			"scope": [ "constant.language.null" ],
			"settings": { "foreground": "#aaaaaa" }
		},

		// comments: light gray
		{
			"scope": [ "comment", "punctuation.definition.comment" ],
			"settings": { "foreground": "#666666", "fontStyle": "italic" }
		},

		// strings: light blue
		{
			"scope": [ "string", "constant.character", "constant.other.symbol" ],
			"settings": { "foreground": "#ADD8E6" }
		},

		// methods, tags, classes, booleans: white
		{
			"scope": [
				"entity.name.method",
				"support.function.method",
				"meta.method-call",
				"entity.name.type.class",
			  	"support.class",
				"support.class.component",
				"entity.name.tag",
				"constant.language.boolean"
			],
			"settings": { "foreground": "#FFFFFF", "fontStyle": "bold" }
		},

		// functions: light purple
		{
			"scope": [ "entity.name.function", "support.function", "meta.function-call" ],
			"settings": { "foreground": "#ecbbec" }
		} 
	]
}